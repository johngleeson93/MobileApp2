<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/reportFragment">

    <fragment
        android:id="@+id/landmarkFragment"
        android:name="ie.wit.landmark.ui.landmark.LandmarkFragment"
        android:label="@string/action_landmark"
        tools:layout="@layout/fragment_landmark" >
        <action
            android:id="@+id/action_landmarkFragment_to_reportFragment"
            app:destination="@id/reportFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/reportFragment"
        android:name="ie.wit.landmark.ui.report.ReportFragment"
        android:label="@string/action_report"
        tools:layout="@layout/fragment_report" >
        <action
            android:id="@+id/action_reportFragment_to_landmarkFragment"
            app:destination="@id/landmarkFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_reportFragment_to_landmarkDetailFragment"
            app:destination="@id/landmarkDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="ie.wit.landmark.ui.about.AboutFragment"
        android:label="@string/action_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/landmarkDetailFragment"
        android:name="ie.wit.landmark.ui.detail.LandmarkDetailFragment"
        android:label="Landmark Detail"
        tools:layout="@layout/fragment_landmark_detail" >
        <action
            android:id="@+id/action_landmarkDetailFragment_to_reportFragment"
            app:destination="@id/reportFragment" />
        <argument
            android:name="landmarkid"
            app:argType="string" />
    </fragment>
</navigation>